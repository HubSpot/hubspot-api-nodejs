{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./lib",
    "noLib": false,
    "lib": [ "es6" ],
  },
  "exclude": [
    "lib",
    "node_modules"
  ]
}
