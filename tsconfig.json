{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./lib",
    "noLib": false,
    "lib": [ "es6" ],
    "resolveJsonModule": true,
  },
  "exclude": [
    "lib",
    "node_modules"
  ]
}
